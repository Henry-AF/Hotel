<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/dashboard.css">
    <title>Vale Hotels Dashboard</title>
</head>

<body>
    <div class="sidebar">
        <div class="logo">
            <h1>Vale <span>Hotels</span></h1>
        </div>
        <div class="menu">
            <div class="menu-item">
                <div class="icon"></div>
                <span>Dashboard</span>
            </div>
        </div>
    </div>
    <div class="main-content">
        <div class="header">
            <h2>Overview</h2>
            <button class="dropdown">This Week</button>
        </div>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Reserved Rooms</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(item=> { %>
                        <tr>
                            <td>
                                <%= item.name %>
                            </td>
                            <td>
                                <%= item.email %>
                            </td>
                            <td>
                                <%= item.reserved_rooms %>
                            </td>
                            <td>
                                <%= item.date %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        <div class="stats">
            <div class="stat-item">
                <h3>
                    <%= stats.occupied_rooms %>
                </h3>
                <p>Occupied rooms</p>
            </div>
            <div class="stat-item">
                <h3>R$ <%= stats.gross_income %>
                </h3>
                <p>Gross Income</p>
            </div>
            <div class="stat-item">
                <h3>
                    <%= stats.occupancy_rate %>%
                </h3>
                <p>Occupancy rate</p>
            </div>
            <div class="stat-item">
                <h3>
                    <%= stats.cancellation_fee %>%
                </h3>
                <p>Cancellation Fee</p>
            </div>
        </div>
    </div>
</body>

</html>